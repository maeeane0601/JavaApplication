<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javaapplication.LoginController">
    <children>
        <TextField fx:id="txtUserName" layoutX="100.0" layoutY="100.0" />
        <PasswordField fx:id="txtPassword" layoutX="100.0" layoutY="150.0" />
        <Button fx:id="btnLogin" layoutX="100.0" layoutY="200.0" text="Login" onAction="#handleLogin"/>
    </children>
</AnchorPane>